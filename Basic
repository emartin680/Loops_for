  static void Main(string[] args)
        {
            //1. This for loop will print the numbers from 1 to 50 in ascending order
            for(int i=1;i<=50;i++)
            {
                Console.WriteLine(i);
            }

            Console.ReadKey();
            //2. This for loop will print the numbers from 50 to 1 in descending order
            for(int i=50;i>0;i--)
            {
                Console.WriteLine(i);
            }

            Console.ReadKey();

        }
